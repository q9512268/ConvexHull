package de.feu.propra18.q9512268.app.objects;

import javafx.beans.property.DoubleProperty;
import javafx.beans.property.SimpleDoubleProperty;
import javafx.collections.FXCollections;
import javafx.collections.ObservableList;

public class SimpleCircle {

	ObservableList<DoubleProperty> circleInformation;

	public SimpleCircle() {
		circleInformation = FXCollections.observableArrayList();
		circleInformation.add(new SimpleDoubleProperty());
		circleInformation.add(new SimpleDoubleProperty());
		circleInformation.add(new SimpleDoubleProperty());
	}

	public DoubleProperty getX() {
		return this.circleInformation.get(0);
	}

	public void setX(Double x) {
		this.circleInformation.get(0).set(x);
	}

	public DoubleProperty getY() {
		return this.circleInformation.get(1);
	}

	public void setY(Double y) {
		this.circleInformation.get(1).set(y);
	}

	public DoubleProperty getRadius() {
		return this.circleInformation.get(2);
	}

	public void setRadius(Double radius) {
		this.circleInformation.get(2).set(radius);
	}

	public void clear() {
		for (int i = 0; i < circleInformation.size(); i++) {
			circleInformation.get(i).set(0);
		}
	}

}
